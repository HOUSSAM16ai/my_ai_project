# ======================================================================================
# .FLAKE8 - Code Style Enforcement (Legacy Support)
# ======================================================================================
# Note: Ruff is preferred for new code, but this ensures flake8 compatibility
# Standards: PEP 8 + Google/Facebook extensions

[flake8]
max-line-length = 100
max-complexity = 15
# Comments about ignored codes:
# E203 - whitespace before ':' (conflicts with black)
# E501 - line too long (handled by black)
# W503 - line break before binary operator (outdated)
# W504 - line break after binary operator
# E402 - module level import not at top (sometimes necessary)
# F401 - imported but unused (in __init__.py)
# E722 - bare except (sometimes intentional for broad error catching)
# E741 - ambiguous variable names (allow short names in specific contexts)
# C901 - function complexity (handled by radon)
extend-ignore = E203,E501,W503,W504,E402,F401,E722,E741,C901,E231,E701

exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    migrations,
    node_modules,
    htmlcov,
    .pytest_cache,
    .mypy_cache,
    .tox

per-file-ignores =
    __init__.py: F401
    tests/*: S101

# Import order checking (compatible with isort)
import-order-style = google
application-import-names = app,config

# Docstring requirements
docstring-convention = google

  "components": {
    "schemas": {
      "CapacityPlanRequest": {
        "properties": {
          "service_name": {
            "type": "string",
            "title": "Service Name"
          },
          "forecast_horizon_hours": {
            "type": "integer",
            "title": "Forecast Horizon Hours",
            "default": 72
          }
        },
        "type": "object",
        "required": [
          "service_name"
        ],
        "title": "CapacityPlanRequest"
      },
      "ForecastRequest": {
        "properties": {
          "service_name": {
            "type": "string",
            "title": "Service Name"
          },
          "metric_type": {
            "$ref": "#/components/schemas/MetricType"
          },
          "hours_ahead": {
            "type": "integer",
            "title": "Hours Ahead",
            "default": 24
          }
        },
        "type": "object",
        "required": [
          "service_name",
          "metric_type"
        ],
        "title": "ForecastRequest"
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "MetricType": {
        "type": "string",
        "enum": [
          "latency",
          "error_rate",
          "request_rate",
          "cpu_usage",
          "memory_usage",
          "disk_usage",
          "network_io"
        ],
        "title": "MetricType",
        "description": "\u0623\u0646\u0648\u0627\u0639 \u0627\u0644\u0645\u0642\u0627\u064a\u064a\u0633 \u0627\u0644\u0645\u0633\u062a\u062e\u062f\u0645\u0629 \u0641\u064a \u0646\u0642\u0627\u0637 \u0627\u0644\u0642\u064a\u0627\u0633 \u0627\u0644\u062a\u0634\u063a\u064a\u0644\u064a\u0629."
      },
      "TelemetryRequest": {
        "properties": {
          "metric_id": {
            "type": "string",
            "title": "Metric Id"
          },
          "service_name": {
            "type": "string",
            "title": "Service Name"
          },
          "metric_type": {
            "$ref": "#/components/schemas/MetricType"
          },
          "value": {
            "type": "number",
            "title": "Value"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "title": "Timestamp"
          },
          "labels": {
            "additionalProperties": {
              "type": "string"
            },
            "type": "object",
            "title": "Labels",
            "default": {}
          },
          "unit": {
            "type": "string",
            "title": "Unit",
            "default": ""
          }
        },
        "type": "object",
        "required": [
          "metric_id",
          "service_name",
          "metric_type",
          "value"
        ],
        "title": "TelemetryRequest"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      }
    }
  }

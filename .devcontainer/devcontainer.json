{
  "name": "CogniForge - Ultimate Edition",
  
  // المسار النسبي الصحيح لملف الدوكر (كما اكتشفنا سابقاً)
  "dockerComposeFile": ["../docker-compose.yml"],
  
  "service": "web",
  
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  // --- القوة المطلقة ---
  // العمل بصلاحيات الروت داخل بيئة التطوير فقط
  // هذا يحل مشكلة (failed to solve) ومشكلة (permission denied) نهائياً
  "remoteUser": "root",

  "remoteEnv": {
    "HOME": "/root",
    "PYTHONUNBUFFERED": "1"
  },

  "overrideCommand": false,

  // التثبيت الذكي: يفحص الملفات ثم يثبت
  "postCreateCommand": "pip install --no-cache-dir --upgrade pip && if [ -f requirements.txt ]; then pip install --no-cache-dir -r requirements.txt; fi && pip install --no-cache-dir ruff pytest",

  // إعدادات المنافذ الذكية
  "forwardPorts": [8000],
  "portsAttributes": {
      "8000": { 
        "label": "Unified AI Interface", 
        "onAutoForward": "notify" 
      }
  },

  // الميزات الإضافية (بدون Docker-in-Docker لتجنب التعقيد حالياً)
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "username": "root"
    }
  },

  // تخصيصات VS Code الاحترافية
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",       // السرعة
        "usernamehw.errorlens",     // الرؤية
        "eamodio.gitlens",          // التاريخ
        "humao.rest-client",        // الاختبار
        "mechatroner.rainbow-csv"   // قراءة البيانات
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "zsh",
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "editor.formatOnSave": true,
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff",
          "editor.codeActionsOnSave": {
             "source.fixAll": "explicit",
             "source.organizeImports": "explicit"
          }
        }
      }
    }
  }
}
{
    "name": "AI Education Platform (Dev Container)",
    "dockerComposeFile": [
        "../docker-compose.yml"
    ],
    "service": "web",
    "workspaceFolder": "/app",

    // === ابدأ الإضافة من هنا ===
    "features": {
        "ghcr.io/devcontainers/features/docker-from-docker:1": {
            "version": "latest"
        }
    },
    // === انتهت الإضافة ===

    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-azuretools.vscode-docker",
                "eamodio.gitlens"
            ]
        }
    }
}

# ======================================================================================
# EDITORCONFIG - Universal Code Style Configuration
# ======================================================================================
# This file ensures consistent coding styles across all editors and IDEs
# Supported by: VS Code, PyCharm, IntelliJ, Sublime, Vim, Emacs, and more
# Standard used by: Google, Microsoft, Facebook, Apple, Netflix

root = true

# ======================================================================================
# DEFAULT - All Files
# ======================================================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# ======================================================================================
# PYTHON - Production Code
# ======================================================================================
[*.py]
indent_size = 4
max_line_length = 100
quote_type = double

# ======================================================================================
# YAML - Configuration Files
# ======================================================================================
[*.{yml,yaml}]
indent_size = 2

# ======================================================================================
# JSON - Data Files
# ======================================================================================
[*.json]
indent_size = 2
insert_final_newline = false

# ======================================================================================
# MARKDOWN - Documentation
# ======================================================================================
[*.md]
max_line_length = off
trim_trailing_whitespace = false

# ======================================================================================
# SHELL SCRIPTS - Bash/Shell
# ======================================================================================
[*.sh]
indent_size = 2

# ======================================================================================
# FRONTEND - HTML, CSS, JavaScript
# ======================================================================================
[*.{html,css,js}]
indent_size = 2

# ======================================================================================
# DOCKER - Dockerfile and Compose
# ======================================================================================
[{Dockerfile*,docker-compose*.yml}]
indent_size = 2

# ======================================================================================
# CONFIGURATION - INI, TOML, ENV
# ======================================================================================
[*.{ini,toml,env}]
indent_size = 2

# ======================================================================================
# MAKEFILES - Tabs Required
# ======================================================================================
[Makefile]
indent_style = tab

# ======================================================================================
# MIGRATIONS - Database Migrations (Read-only, don't modify)
# ======================================================================================
[migrations/versions/*.py]
insert_final_newline = unset
trim_trailing_whitespace = unset

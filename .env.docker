# CogniForge Docker Environment Configuration
# استخدم هذا الملف عند التشغيل مع Docker

# تطبيق
ENV=development
SECRET_KEY=docker-dev-secret-key-change-in-production

# قاعدة البيانات
# الخيار 1: SQLite (التطوير البسيط - جاهز مباشرة)
DATABASE_URL=sqlite+aiosqlite:///./cogniforge.db

# الخيار 2: PostgreSQL (إذا كنت تستخدم خادم قاعدة بيانات)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/cogniforge

# الإدارة
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Admin User

# AI (اختياري)
OPENROUTER_API_KEY=

# Flask Settings (Legacy)
FLASK_ENV=development
FLASK_DEBUG=1

# تطوير
PYTHONUNBUFFERED=1
ALLOW_MOCK_LLM=false
